//********************************************
// Resets, headers and footers
//********************************************
body
    margin: 0
    font-family: 'Roboto', sans-serif
    font-size: 12px
    font-weight: 300
    color:  rebeccapurple
    @media (min-width:414px)
        font-size:12px
    @media (min-width:769px)
        font-size:14px
    @media (min-width:1025px)
        font-size:16px

.home-title
    opacity: .35
    display: flex
    justify-content: center
    font-family: 'Nunito', serif
    svg
        &#title
            font-size: 7vmax
            width: 44vmax
            height: .7em

//Colors
.bkgd-dark
    background-color: #010B12